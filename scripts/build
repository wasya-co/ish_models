#!/bin/bash

set -x
set -e

if ssh-add -L | grep macpc ; then
  echo ok # nothing
else
  ssh-add ~/.ssh/mac_id_rsa_2
fi

./scripts/version_bump
./scripts/update_gemspec

bundle > /dev/null

git add .
git commit -m 'autobuild `date "+%Y%m%d"`'
git push

gem build ish_models.gemspec
gem push ish_models-$version.gem
rm ish_models-$version.gem

echo "wco_models build ok"
