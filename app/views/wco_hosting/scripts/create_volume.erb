function download { name="$(basename $1)"; curl "$1" > "$name"; }
export filename="$(basename <%= @app.tmpl.volume_zip %>)"

set -ex

cd <%= @workdir %>
rm -rf __MACOSX

## cache/overwrite
[ ! -e $filename ] && curl <%= @app.tmpl.volume_zip %> > $filename
