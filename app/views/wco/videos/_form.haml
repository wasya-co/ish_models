
= form_for video do |f|
  .row
    .col-sm-6
      .field
        %label youtube_id
        = f.text_field :youtube_id
      .field
        %label Title (name)
        = f.text_field :name
      .field
        %label Lead
        = f.select :lead_id, options_for_select(@leads_list, selected: video.lead_id), {}, class: :select2
      .field
        %label Tags
        = f.select :tag_ids, options_for_select(@tags_list, selected: video.tag_ids), {  }, { class: :select2, multiple: 'multiple' }
    .col-sm-6
      .field
        = f.label :video
        = f.file_field :video
      .field
        = f.label :thumb
        = f.file_field :thumb


  -# = render 'wco/application/form_nonpublic', f: f, model: video

  .row
    .col-md-6
      %label descr
      = f.text_area :descr, class: :tinymce


  .action
    = f.submit
