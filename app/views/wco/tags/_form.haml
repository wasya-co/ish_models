
.tags--form
  = form_for tag do |f|

    .d-flex
      %label site
      = f.select :site_id, options_for_select(@sites_list, selected: tag.site_id), {}, class: 'select2'
    .field
      %label slug
      = f.text_field :slug

    .field.d-flex
      %label parent
      = f.select :parent_id, options_for_select(@tags_list, selected: tag.parent_id ), {}, class: 'select2'

    .actions
      = f.submit
